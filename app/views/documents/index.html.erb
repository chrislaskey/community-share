<div class="page-lead">
  <div class="page-heading">
    <%= @search.present? ? heading("Document Search", @search) : heading("Documents", current_community.name) %>
  </div>
  <div class="page-actions">
    <% if role?(:admin, :editor, :contributor) %>
      <a href="<%= new_document_path %>" class="uk-button uk-button-link">
        <span uk-icon="icon: plus"></span>
        New Document
      </a>
    <% end %>
  </div>
</div>

<%= render "layouts/alerts" %>

<div class="page-main">
  <div class="page-content">
    <%= render "documents/documents" %>
    <%= render "documents/documents_404" if @documents.empty? %>
  </div>
  <%= render "documents/sidebar_tags" %>
</div>
