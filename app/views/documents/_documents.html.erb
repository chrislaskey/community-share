<% documents ||= @documents %>

<% if documents.any? %>
  <ul class="document-list">
    <% documents.each do |document| %>
      <li>
        <h3><%= link_to document.name, document_path(document) %></h3>
        <%= render "documents/document_tags", document: document %>
      </li>
    <% end %>
  </ul>
<% end %>
