<div class="page-lead">
  <div class="page-heading">
    <%= heading("Community Member", current_community.name) %>
  </div>
  <div class="page-actions">
    <a href="<%= edit_membership_path(@membership) %>" class="uk-button uk-button-link">
      <span uk-icon="icon: file-edit"></span>
      Edit
    </a>
    <a href="<%= membership_path(@membership) %>" data-confirm="Are you sure?" data-method="delete" class="uk-button uk-button-link">
      <span uk-icon="icon: trash"></span>
      Delete
    </a>
  </div>
</div>

<%= render "layouts/alerts" %>

<div class="page-main">
  <div class="page-content">
    <p><strong>Name</strong></p>
    <%= @membership.user.name.presence || "-" %>

    <p><strong>Email</strong></p>
    <%= @membership.user.email %>

    <p><strong>Role</strong></p>
    <%= @membership.role %>

    <p><strong>Logins</strong></p>
    <%= @membership.user.sign_in_count %>

    <p><strong>Last Login</strong></p>
    <%= @membership.user.last_sign_in_ago %><br/>
    <small><%= @membership.user.last_sign_in_at %></small>

    <p><strong>LinkedIn ID</strong></p>
    <pre><%= @membership.user.uid || "-" %></pre>

    <p><strong>LinkedIn Token</strong></p>
    <pre><%= @membership.user.token || "-" %></pre>
  </div>
</div>
