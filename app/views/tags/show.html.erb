<div class="page-main">
  <div class="page-content">
    <div class="page-lead">
      <div class="page-heading">
        <h1>Tag <%= @tag.name %></h1>
      </div>
      <div class="page-actions">
        <a href="<%= edit_tag_path(@tag) %>" class="uk-button uk-button-link">
          <span uk-icon="icon: file-edit"></span>
          Edit
        </a>
        <a href="<%= tag_path(@tag) %>" data-confirm="Are you sure?" data-method="delete" class="uk-button uk-button-link">
          <span uk-icon="icon: trash"></span>
          Delete
        </a>
      </div>
    </div>

    <%= link_to "Related Documents (#{@tag.documents.count})", document_tag_path(@tag) %>

    <p><strong>Category</strong></p>
    <%= @tag.category %>

    <p><strong>Name</strong></p>
    <%= @tag.name %>
  </div>
</div>
