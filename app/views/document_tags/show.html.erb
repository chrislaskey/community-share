<div class="page-main">
  <div class="page-content">
    <div class="page-lead">
      <div class="page-heading">
        <h1>Related Documents</h1>
      </div>
      <div class="page-actions">
        <a href="<%= tag_path(@tag) %>" class="uk-button uk-button-link">
          <span uk-icon="icon: file-edit"></span>
          Details
        </a>
      </div>
    </div>

    <h3>Related to <%= @tag.name %></h3>

    <%= render "documents/documents", documents: @tag.documents %>
  </div>
</div>
